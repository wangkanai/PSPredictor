<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <LangVersion>12.0</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <AssemblyName>PSPredictor</AssemblyName>
    <RootNamespace>PSPredictor</RootNamespace>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsNotAsErrors>CS1591</WarningsNotAsErrors>
    
    <!-- PowerShell Module Properties -->
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <AssemblyTitle>PSPredictor - Advanced PowerShell Command Predictor</AssemblyTitle>
    <AssemblyDescription>Revolutionary PowerShell Binary Module that transforms the command-line experience into a comprehensive IDE within the terminal</AssemblyDescription>
    <AssemblyCompany>Wangkanai</AssemblyCompany>
    <AssemblyProduct>PSPredictor</AssemblyProduct>
    <Copyright>Copyright Â© 2025 Wangkanai</Copyright>
    <AssemblyVersion>2.0.0.0</AssemblyVersion>
    <FileVersion>2.0.0.0</FileVersion>
    <InformationalVersion>2.0.0</InformationalVersion>
    
    <!-- Package Properties -->
    <PackageId>PSPredictor</PackageId>
    <PackageVersion>2.0.0</PackageVersion>
    <Authors>Wangkanai</Authors>
    <PackageDescription>Revolutionary PowerShell Binary Module that transforms the command-line experience into a comprehensive IDE within the terminal with AI-powered predictions, syntax highlighting, error indication, and advanced editing capabilities.</PackageDescription>
    <PackageTags>PowerShell;Command-Line;Auto-Complete;IntelliSense;Prediction;AI;Machine-Learning;Terminal;IDE;CLI</PackageTags>
    <PackageProjectUrl>https://github.com/wangkanai/PSPredictor</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/wangkanai/PSPredictor</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <!-- PowerShell Dependencies -->
  <ItemGroup>
    <PackageReference Include="Microsoft.PowerShell.SDK" />
    <PackageReference Include="System.Management.Automation" />
  </ItemGroup>

  <!-- ML.NET Dependencies -->
  <ItemGroup>
    <PackageReference Include="Microsoft.ML" />
    <PackageReference Include="Microsoft.ML.AutoML" />
    <PackageReference Include="Microsoft.ML.Transforms.Text" />
  </ItemGroup>

  <!-- Database Dependencies -->
  <ItemGroup>
    <PackageReference Include="Microsoft.Data.Sqlite" />
    <PackageReference Include="System.Data.SQLite.Core" />
  </ItemGroup>

  <!-- Configuration and Utilities -->
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" />
    <PackageReference Include="Microsoft.Extensions.Logging" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" />
    <PackageReference Include="System.Text.Json" />
    <PackageReference Include="Newtonsoft.Json" />
  </ItemGroup>

  <!-- Performance and Diagnostics -->
  <ItemGroup>
    <PackageReference Include="System.Diagnostics.PerformanceCounter" />
    <PackageReference Include="Microsoft.Extensions.Caching.Memory" />
  </ItemGroup>

  <!-- Project References -->
  <ItemGroup>
    <ProjectReference Include="../Core/PSPredictor.Core.csproj" />
    <ProjectReference Include="../Shared/PSPredictor.Shared.csproj" />
  </ItemGroup>

  <!-- Embedded ML Models -->
  <ItemGroup>
    <EmbeddedResource Include="AI/Models/CommandPrediction.zip" />
    <EmbeddedResource Include="AI/Models/ParameterPrediction.zip" />
    <EmbeddedResource Include="AI/Models/ContextAwareness.zip" />
  </ItemGroup>

  <!-- PowerShell Module Files -->
  <ItemGroup>
    <Content Include="Module/PSPredictor.psd1">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Module/PSPredictor.psm1">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <!-- Build Configuration -->
  <PropertyGroup Condition="'$(Configuration)' == 'Debug'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <Optimize>false</Optimize>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <DefineConstants>TRACE</DefineConstants>
    <DebugType>pdbonly</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <Optimize>true</Optimize>
  </PropertyGroup>

</Project>